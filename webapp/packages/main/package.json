{
  "name": "@alas/main",
  "version": "0.4.0",
  "description": "alas webapp main",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "postuninstall": "electron-builder install-app-deps",
    "prebuild": "electron-vite build",
    "build": "npm run prebuild && electron-builder build --config electron-builder.config.cjs --dir",
    "clean": "rm -rf dist release .eslintcache",
    "dev": "electron-vite dev -w",
    "start": "electron-vite preview",
    "electron:build-local": "NOTARIZE=false npm run build -- --dir --config.asar=false",
    "electron:build:linux": "npm run build --linux",
    "electron:build:mac": "npm run build --mac",
    "electron:build:win": "npm run build --win",
    "postinstall": "electron-builder install-app-deps",
    "clean:modules": "rm -rf node_modules"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5",
    "electron-updater": "^6.1.7",
    "log4js": "^6.4.1",
    "os-name": "^6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "python-shell": "^5",
    "dayjs": "^1",
    "fast-glob": "^3",
    "fs-extra": "^11.1.1",
    "lodash-es": "^4.17.21",
    "mustache": "^4.2.0",
    "nanoid": "^4.0.2",
    "tree-kill": "^1.2.2",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@alas/common": "workspace:*",
    "@types/fs-extra": "^9",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "electron-debug": "^3",
    "electron-devtools-installer": "^3",
    "happy-dom": "^9",
    "@vue/devtools": "^7",
    "vitest": "latest",
    "vite": "^5",
    "unplugin-auto-expose": "^0.0.5"
  }
}
